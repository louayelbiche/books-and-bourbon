    "include": ["src/", "app/", "public/", "next.config.ts", "package.json", "tsconfig.json", "package-lock.json"],
    "exclude": [".next", ".turbo", "node_modules", "tsconfig.tsbuildinfo", ".git", "*.tgz"]
